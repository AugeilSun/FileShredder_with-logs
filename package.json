{
  "name": "file-shredder",
  "version": "1.0.0",
  "description": "一个功能完善的Windows客户端文件粉碎机应用程序",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "test": "jest"
  },
  "keywords": [
    "file-shredder",
    "security",
    "privacy",
    "data-destruction"
  ],
  "author": "File Shredder Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-icon-builder": "^2.0.1",
    "icon-gen": "^5.0.0",
    "jest": "^29.7.0",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.5"
  },
  "dependencies": {
    "crypto-js": "^4.1.1"
  },
  "build": {
    "appId": "com.fileshredder.app",
    "productName": "文件粉碎机",
    "directories": {
      "output": "dist-new",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "index.html",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets/icon.svg",
        "to": "icon.svg"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "sign": null,
      "signDlls": false,
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "文件粉碎机"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.exe"
    }
  }
}